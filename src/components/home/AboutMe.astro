---
const personalImageAlt = "Ricardo Castro";
import { me } from "@/assets";
import { Image } from "astro:assets";
import SectionContainer from "../SectionContainer.astro";
import ProfileCheck from "../icons/ProfileCheck.astro";
import { getI18N } from "@/i18n";
import { getLangFromUrl, useTranslations } from "@/i18n/utils";

const { currentLocale } = Astro;

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

const i18n = getI18N({ currentLocale });
---

<SectionContainer id={t("id.sobre-mi")}>
  <h2 class="mb-6 flex items-center gap-x-3 text-3xl font-semibold">
    <ProfileCheck class="size-7" />
    {i18n.ABOUT_ME.TITLE}
  </h2>

  <article
    class="flex flex-col items-center justify-center gap-8 text-gray-700 dark:text-gray-300 md:flex-row"
  >
    <div
      class="order-2 text-pretty md:order-1 [&>p>strong]:font-mono [&>p>strong]:font-normal [&>p>strong]:text-yellow-500 dark:[&>p>strong]:text-yellow-100 [&>p]:mb-4"
    >
      <p>
        {i18n.ABOUT_ME.PARAGRAPH_1}
        <strong>{i18n.ABOUT_ME.PARAGRAPH_1_CTA}</strong>.
      </p>

      <p>
        {i18n.ABOUT_ME.PARAGRAPH_2}
        <strong>{i18n.ABOUT_ME.PARAGRAPH_2_CTA}</strong>{
          i18n.ABOUT_ME.PARAGRAPH_2_END
        }.
      </p>

      <p>
        {i18n.ABOUT_ME.PARAGRAPH_3}
      </p>
    </div>

    <Image
      width="200"
      height="200"
      src={me}
      alt={personalImageAlt}
      class="order-1 aspect-square h-full w-64 rotate-3 rounded-2xl bg-white object-cover p-1 ring-1 ring-white/20 dark:bg-yellow-500/5 md:order-2 lg:w-64 lg:p-2"
      style="object-position: 50% 50%"
    />
  </article>
</SectionContainer>

