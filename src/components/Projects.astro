---
import { Image } from "astro:assets";
import GitHub from "./icons/GitHub.astro";
import NextJS from "./icons/NextJS.astro";
import Tailwind from "./icons/Tailwind.astro";
import Typescript from "./icons/Typescript.astro";
import Deno from "./icons/Deno.astro";
import Google from "./icons/Google.astro";
import Hono from "./icons/Hono.astro";
import Medusa from "./icons/Medusa.astro";
import Nodejs from "./icons/Nodejs.astro";
import Postgres from "./icons/Postgres.astro";
import Supabase from "./icons/Supabase.astro";
import AstroIcon from "./icons/AstroIcon.astro";
import Link from "./icons/Link.astro";
import LinkButton from "./LinkButton.astro";

import {
  projectDolary,
  projectEnfoque,
  projectLtaxis,
  projectMedusa,
} from "@/assets";
import type { ImageMetadata } from "astro";

const TAGS = {
  NEXT: {
    name: "Next.js",
    class: "bg-black text-white",
    icon: NextJS,
  },
  TAILWIND: {
    name: "Tailwind CSS",
    class: "bg-[#003159] text-white",
    icon: Tailwind,
  },
  TYPESCRIPT: {
    name: "TypeScript",
    class: "bg-blue-800 text-white",
    icon: Typescript,
  },
  DENO: {
    name: "Deno",
    class: "bg-neutral-700 text-white",
    icon: Deno,
  },
  GOOGLE: {
    name: "Google Maps",
    class: "bg-[#4285F4] text-white",
    icon: Google,
  },
  HONO: {
    name: "Hono",
    class: "bg-orange-500 text-white",
    icon: Hono,
  },
  MEDUSA: {
    name: "Medusa",
    class: "bg-neutral-400 text-white",
    icon: Medusa,
  },
  NODEJS: {
    name: "Node.js",
    class: "bg-green-400 text-white",
    icon: Nodejs,
  },
  POSTGRES: {
    name: "Postgres",
    class: "bg-sky-500 text-white",
    icon: Postgres,
  },
  SUPABASE: {
    name: "Supabase",
    class: "bg-green-900 text-white",
    icon: Supabase,
  },
  ASTRO: {
    name: "Astro",
    class: "bg-orange-400 text-white",
    icon: AstroIcon,
  },
};
const PROJECTS: {
  title: string;
  description: string;
  link: string;
  image: ImageMetadata;
  tags: {
    name: string;
    class: string;
    // eslint-disable-next-line @typescript-eslint/no-explicit-any
    icon: any;
  }[];
  github?: string;
}[] = [
  {
    title: "LTaxis - Revolucionando el transporte en Venezuela",
    description:
      "LTaxis es la solución de transporte que Venezuela estaba esperando. Desarrollada desde cero con Next.js, Tailwind CSS, Supabase y la API de Google Maps, esta plataforma es un 40% más rápida que la competencia y ofrece precios hasta un 30% mejores.",
    link: "https://ltaxis.vercel.app/",
    image: projectLtaxis,
    tags: [
      TAGS.NEXT,
      TAGS.TAILWIND,
      TAGS.SUPABASE,
      TAGS.TYPESCRIPT,
      TAGS.GOOGLE,
    ],
  },
  {
    title: "Dolary - La API de referencia para tasas de cambio en Venezuela",
    description:
      "Dolary es la respuesta a la necesidad de tasas de cambio rápidas y precisas en Venezuela. Desarrollada en Deno y Hono, esta API utiliza técnicas de scrapping para obtener los precios del dólar en el mercado paralelo y del BCV en tiempo récord, con tiempos de respuesta de 8ms a 32ms. En comparación, la competencia tarda de 6 segundos a 21 segundos para proporcionar solo una de estas tasas. ¡Dolary es flexible, rápida y superior en todos los sentidos!",
    link: "https://dolary.deno.dev/docs",
    image: projectDolary,
    tags: [TAGS.DENO, TAGS.HONO],
  },
  {
    title: "Ally Calzados - Optimizando la gestión de ventas de una tienda",
    description:
      "Ally Calzados ahora cuenta con un sistema administrativo de vanguardia gracias al desarrollo basado en Medusa, TypeScript, Next.js, Node.js, Postgres y Tailwind CSS. He mejorado significativamente la gestión de roles, agregando estadísticas, analíticas y conectado con una facturadora. Además, trabajo en convertirlo en un sistema POS completo. Ally Calzados ha dado un gran paso adelante con esta solucion.",
    link: "https://allycalzado.up.railway.app/app/",
    image: projectMedusa,
    tags: [
      TAGS.NEXT,
      TAGS.MEDUSA,
      TAGS.TYPESCRIPT,
      TAGS.NODEJS,
      TAGS.POSTGRES,
      TAGS.TAILWIND,
    ],
  },
  {
    title: "Enfoque Corporativo - Elevando el perfil de abogados en Venezuela",
    description:
      "Transforme la presencia en línea de Enfoque Corporativo, un bufete de abogados en Venezuela. Migrando desde WordPress a Astro, React, Tailwind y TypeScript, cree una página web un 80% más rápida y con una puntuación perfecta en Google Lighthouse. La nueva web de Enfoque Corporativo se destaca como la mejor en su categoría y refleja la excelencia legal que representan.",
    link: "https://enfoquecorporativo.com",
    image: projectEnfoque,
    tags: [TAGS.ASTRO, TAGS.TAILWIND],
  },
];
---

<div class="flex flex-col gap-y-16">
  {
    PROJECTS.map(({ image, title, description, tags, link, github }) => (
      <article class="group flex flex-col space-x-0 space-y-8 md:flex-row md:space-x-8 md:space-y-0">
        <div class="w-full md:w-1/2">
          <div class="relative col-span-6 row-span-5 flex flex-col items-center gap-8 text-clip rounded-xl shadow-xl transition duration-500 ease-in-out sm:rounded-xl md:group-hover:-translate-y-1 md:group-hover:shadow-2xl lg:border lg:border-gray-800 lg:hover:border-gray-700 lg:hover:bg-gray-800/50">
            <Image
              alt={`Screenshot del proyecto ${title}`}
              class="h-56 w-full object-cover object-top transition duration-500 sm:h-full md:scale-110 md:group-hover:scale-105"
              loading="lazy"
              decoding="async"
              src={image}
            />
          </div>
        </div>

        <div class="w-full md:w-1/2 md:max-w-lg">
          <h3 class="text-2xl font-bold text-gray-800 dark:text-gray-100">
            {title}
          </h3>
          <div class="mt-2 flex flex-wrap">
            <ul class="mb-2 flex flex-row flex-wrap gap-x-2">
              {tags.map((tag) => (
                <li>
                  <span
                    class={`flex gap-x-2 rounded-full text-xs ${tag.class} px-2 py-1 `}
                  >
                    <tag.icon class="size-4" />
                    {tag.name}
                  </span>
                </li>
              ))}
            </ul>

            <div class="mt-2 text-gray-700 dark:text-gray-400">
              {description}
            </div>
            <footer class="mt-4 flex items-end justify-start gap-x-4">
              {github && (
                <LinkButton href={github}>
                  <GitHub class="size-6" />
                  Code
                </LinkButton>
              )}
              {link && (
                <LinkButton href={link}>
                  <Link class="size-4" />
                  Preview
                </LinkButton>
              )}
            </footer>
          </div>
        </div>
      </article>
    ))
  }
</div>
