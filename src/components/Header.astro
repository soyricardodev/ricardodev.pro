---
import Logo from "./Logo.astro";
---

<!-- desktop -->
<div class="nav">
  <a
    href="/"
    aria-current="page"
    class="logo-link w-inline-block w--current interactable"
    data-type="link"
  >
    <Logo />
  </a><div class="nav-list">
    <a href="/" class="nav-item">Inicio</a>
    <a href="#experiencia" class="nav-item">Experiencia</a>
    <a href="#proyectos" class="nav-item">Proyectos</a><a
      href="#sobre-mi"
      class="nav-item">Sobre mi</a
    >
  </div><div class="nav-buttons">
    <a href="/contacto" class="button-secondary left w-inline-block">
      <div class="button-text">Contacto</div>
    </a>
    <a href="/contacto" class="button-primary w-inline-block">
      <div class="button-text">Contacto</div>
    </a>
  </div>
</div>

<!-- mobile -->
<div class="mobile-nav">
  <div class="mobile-nav-list-float">
    <a href="#experiencia" class="nav-item float">Experiencia</a><a
      href="#proyectos"
      class="nav-item float">Proyectos</a
    ><a href="#sobre-mi" class="nav-item float">Sobre mi</a><a
      href="/"
      aria-current="page"
      class="logo-mobile w-inline-block w--current"><Logo /></a
    ><div class="mobile-nav-cta-flex">
      <a
        href="/contacto"
        class="button-secondary left float mobile w-inline-block"
        ><div class="button-text float">Contacto</div></a
      >
    </div>
  </div>
</div>

<!-- floating -->
<div
  id="nav-float"
  class="nav-list-float float-hidden transition-all delay-300"
>
  <a href="/" class="nav-item float w--current">Inicio</a><a
    href="#experiencia"
    class="nav-item float">Experiencia</a
  ><a href="#proyectos" class="nav-item float">Proyectos</a><a
    href="/contacto"
    class="button-secondary-nav left float w-inline-block"
    ><div class="button-text float">Contacto</div></a
  >
  <div class="mobile-nav-cta-flex">
    <a href="/contacto" class="nav-item float login">Contacto</a><a
      href="/contacto"
      class="button-secondary left float mobile w-inline-block"
    >
    </a><div></div>
  </div>

  <script>
    document.addEventListener("astro:page-load", () => {
      const navFloat = document.getElementById("nav-float");
      window.addEventListener("scroll", () => {
        if (window.scrollY > 150) {
          if (navFloat) {
            navFloat.classList.remove("float-hidden");
            navFloat.classList.add("float-show");
          }
        } else {
          if (navFloat) {
            navFloat.classList.add("float-hidden");
            navFloat.classList.remove("float-show");
          }
        }
      });
    });
  </script>

  <style>
    .float-hidden {
      transform: translate3d(0px, -80px, 0px) scale3d(1, 1, 1) rotateX(0deg)
        rotateY(0deg) rotateZ(0deg) skew(0deg);
      transform-style: preserve-3d;
    }
    .float-show {
      transform: translate3d(0px, 0px, 0px) scale3d(1, 1, 1) rotateX(0deg)
        rotateY(0deg) rotateZ(0deg) skew(0deg);
      transform-style: preserve-3d;
    }
    .logo-link {
      flex-direction: column;
      justify-content: center;
      align-items: center;
      display: flex;
    }
    .nav {
      z-index: 5000;
      max-width: none;
      justify-content: space-between;
      align-items: stretch;
      margin-left: auto;
      margin-right: auto;
      width: 100%;
      padding: 8px 40px;
      display: flex;
      position: relative;
      @apply text-base;
    }
    .nav-list {
      flex-direction: row;
      justify-content: center;
      align-items: center;
      margin-left: -32px;
      display: flex;
    }
    .nav-item {
      color: #bdbdc0;
      letter-spacing: 0.2px;
      padding: 20px;
      font-weight: 500;
      text-decoration: none;
      transition: color 0.2s;
      font-size: 14px;
    }
    .nav-item:hover {
      color: #fff;
    }
    .nav-item.float {
      color: #fff;
      padding: 16px;
      font-size: 14px;
      transition:
        color 0.2s,
        color 0.2s;
    }
    .nav-item.float:hover {
      color: rgba(255, 255, 255, 0.5);
    }
    .nav-buttons {
      flex-direction: row;
      align-items: center;
      display: flex;
    }
    .button-text {
      letter-spacing: 0.2px;
      font-size: 14px;
      font-weight: 600;
    }
    .button-text.float {
      font-size: 14px;
    }
    .button-secondary {
      color: #fff;
      background-color: transparent;
      border: 1px solid rgba(255, 255, 255, 0.2);
      border-radius: 32px;
      align-items: center;
      padding: 6px 16px;
      font-weight: 400;
      line-height: 24px;
      text-decoration: none;
      display: none;
    }
    .button-secondary:hover {
      box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
    }
    .button-secondary.left {
      -webkit-backdrop-filter: blur(16px);
      backdrop-filter: blur(16px);
      border-color: rgba(255, 255, 255, 0.08);
      margin-right: 12px;
      transition: border-color 0.2s;
      display: none;
    }
    .button-secondary.left:hover {
      box-shadow: none;
      border-color: rgba(255, 255, 255, 0.25);
    }
    .button-secondary.left.float {
      background-color: #171719;
      border-style: solid;
      border-color: rgba(255, 255, 255, 0);
      margin-right: 0;
      transition:
        background-color 0.2s,
        border-color 0.2s;
    }
    .button-secondary.left.float:hover {
      border-style: solid;
      border-color: rgba(255, 255, 255, 0.25);
    }
    .mobile-nav-cta-flex {
      align-items: center;
      display: none;
    }
    .logo-mobile,
    .mobile-nav {
      display: none;
    }
    .mobile-nav-list-float {
      z-index: 5000;
      -webkit-backdrop-filter: blur(16px);
      backdrop-filter: blur(16px);
      background-color: rgba(255, 255, 255, 0.08);
      border: 1px solid rgba(255, 255, 255, 0.08);
      border-radius: 32px;
      flex-direction: row;
      justify-content: center;
      align-items: center;
      margin-left: auto;
      margin-right: auto;
      display: flex;
      position: fixed;
      top: 12px;
      bottom: auto;
      left: 0%;
      right: 0%;
      width: 428px;
    }

    @media screen and (max-width: 767px) {
      .nav,
      .nav-item.float {
        display: none;
      }
      .nav-item.float.login {
        display: block;
      }
      .button-secondary.left.float {
        display: none;
      }
      .button-secondary.left.float.mobile {
        display: flex;
      }

      .mobile-nav-cta-flex {
        display: flex;
      }
      .logo-mobile {
        margin-left: 9px;
        display: block;
      }
      .mobile-nav {
        z-index: 5000;
        width: 100%;
        padding-left: 16px;
        padding-right: 16px;
        display: block;
        position: fixed;
        top: 16px;
      }
      .mobile-nav-list-float {
        width: 100%;
        height: 48px;
        justify-content: space-between;
        margin-left: 0;
        margin-right: 0;
        padding-left: 6px;
        padding-right: 6px;
        display: flex;
        position: static;
      }
    }
    .button-primary {
      -webkit-backdrop-filter: blur(16px);
      backdrop-filter: blur(16px);
      color: #fff;
      background-color: rgba(255, 255, 255, 0.08);
      border: 1px solid rgba(255, 255, 255, 0.08);
      border-radius: 32px;
      align-items: center;
      padding: 6px 16px;
      font-weight: 400;
      line-height: 24px;
      text-decoration: none;
      transition: border-color 0.2s;
      display: flex;
    }
    .button-primary:hover {
      border-color: rgba(255, 255, 255, 0.25);
    }

    .nav-list-float {
      z-index: 5000;
      -webkit-backdrop-filter: blur(16px);
      backdrop-filter: blur(16px);
      background-color: rgba(255, 255, 255, 0.08);
      border: 1px solid rgba(255, 255, 255, 0.08);
      border-radius: 32px;
      flex-direction: row;
      justify-content: center;
      align-items: center;
      margin-left: auto;
      margin-right: auto;
      position: fixed;
      top: 12px;
      bottom: auto;
      left: 0%;
      right: 0%;

      @apply hidden max-w-max px-1 md:flex;
    }

    .button-secondary-nav {
      color: #fff;
      background-color: transparent;
      border: 1px solid rgba(255, 255, 255, 0.2);
      border-radius: 32px;
      align-items: center;
      padding: 6px 16px;
      font-weight: 400;
      line-height: 24px;
      text-decoration: none;
      display: none;
    }
    .button-secondary-nav:hover {
      box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
    }
    .button-secondary-nav.left {
      -webkit-backdrop-filter: blur(16px);
      backdrop-filter: blur(16px);
      border-color: rgba(255, 255, 255, 0.08);
      margin-right: 12px;
      transition: border-color 0.2s;
      display: flex;
    }
    .button-secondary-nav.left:hover {
      box-shadow: none;
      border-color: rgba(255, 255, 255, 0.25);
    }
    .button-secondary-nav.left.float {
      background-color: #171719;
      border-style: solid;
      border-color: rgba(255, 255, 255, 0);
      margin-right: 0;
      transition:
        background-color 0.2s,
        border-color 0.2s;
    }
    .button-secondary-nav.left.float:hover {
      border-style: solid;
      border-color: rgba(255, 255, 255, 0.25);
    }
  </style>
</div>
